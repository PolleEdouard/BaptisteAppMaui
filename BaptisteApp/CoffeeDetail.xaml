<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BaptisteApp.CoffeeDetail"
             Title="{Binding title}">

    <ScrollView>

        <VerticalStackLayout Padding="20" Spacing="10">
            <Image Source="{Binding image}" Aspect="AspectFit" HeightRequest="300"/>
            <Label Text="{Binding title}" 
               FontSize="Large" 
               FontAttributes="Bold"/>
            <Label Text="{Binding description}"
                FontSize="Medium"/>
            <Button x:Name="Retour" Text="Retour" Clicked="GoCoffeePage" HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
