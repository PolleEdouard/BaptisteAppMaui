<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BaptisteApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BaptisteApp"
    Shell.FlyoutBehavior="Disabled"
    Title="BaptisteApp">

    <local:CustomTabBar
        x:Name="customTabBar"
        BackgroundColor="DarkBlue">
        <Tab Title="Home" Icon="house.png">
            <ShellContent Route="HomePage" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Setting" Icon="settings.png">
            <ShellContent Route="SettingsPage" ContentTemplate="{DataTemplate local:Settings}" />
        </Tab>
    </local:CustomTabBar>
</Shell>